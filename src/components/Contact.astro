---
// Contact section with form and direct contact info
---

<section id="contact" class="py-20 lg:py-32 bg-[#1a1a1a]">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-5xl mx-auto">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-[#f5f5f0] mb-4 text-center">
        Contact
      </h2>
      <p class="text-[#a0a0a0] text-lg text-center mb-12 max-w-2xl mx-auto">
        Have questions about lessons or the Brazil tour? Reach out below.
      </p>

      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="bg-[#2a2a2a] rounded-2xl p-8 border border-[#3a3a3a]">
          <h3 class="text-2xl font-bold text-[#f5f5f0] mb-6">Send a Message</h3>
          
          <form id="contact-form" class="space-y-6">
            <div>
              <label for="name" class="block text-[#f5f5f0] font-medium mb-2">
                Name
              </label>
              <input 
                type="text" 
                id="name" 
                name="name"
                required
                class="w-full px-4 py-3 bg-[#1a1a1a] border border-[#3a3a3a] rounded-lg text-[#f5f5f0] placeholder-[#a0a0a0] focus:outline-none focus:ring-2 focus:ring-[#009739] focus:border-transparent"
                placeholder="Your name"
              />
            </div>

            <div>
              <label for="email" class="block text-[#f5f5f0] font-medium mb-2">
                Email
              </label>
              <input 
                type="email" 
                id="email" 
                name="email"
                required
                class="w-full px-4 py-3 bg-[#1a1a1a] border border-[#3a3a3a] rounded-lg text-[#f5f5f0] placeholder-[#a0a0a0] focus:outline-none focus:ring-2 focus:ring-[#009739] focus:border-transparent"
                placeholder="your.email@example.com"
              />
            </div>

            <div>
              <label for="message" class="block text-[#f5f5f0] font-medium mb-2">
                Message
              </label>
              <textarea 
                id="message" 
                name="message"
                required
                rows="5"
                class="w-full px-4 py-3 bg-[#1a1a1a] border border-[#3a3a3a] rounded-lg text-[#f5f5f0] placeholder-[#a0a0a0] focus:outline-none focus:ring-2 focus:ring-[#009739] focus:border-transparent resize-none"
                placeholder="Tell me about your musical goals or tour questions..."
              ></textarea>
            </div>

            <button 
              type="submit"
              class="w-full bg-[#009739] text-white px-6 py-4 rounded-lg hover:bg-[#007a2e] transition-all transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-[#009739] focus:ring-offset-2 focus:ring-offset-[#2a2a2a] font-semibold shadow-lg"
            >
              Send Message
            </button>
          </form>

          <!-- Success Message -->
          <div id="contact-success" class="hidden mt-6 bg-[#009739]/10 border border-[#009739] rounded-lg p-6">
            <div class="flex items-center gap-3 text-[#009739]">
              <svg class="w-6 h-6 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <div>
                <p class="font-semibold">Message sent!</p>
                <p class="text-sm text-[#a0a0a0]">I'll get back to you within 24-48 hours.</p>
              </div>
            </div>
          </div>

          <!-- Error Message -->
          <div id="contact-error" class="hidden mt-6 bg-red-500/10 border border-red-500 rounded-lg p-6">
            <div class="flex items-center gap-3 text-red-400">
              <svg class="w-6 h-6 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
              <p class="font-semibold">Please fill out all fields correctly.</p>
            </div>
          </div>
        </div>

        <!-- Direct Contact Info -->
        <div class="space-y-8">
          <!-- Email -->
          <div class="bg-[#2a2a2a] rounded-2xl p-8 border border-[#3a3a3a]">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-[#009739]/10 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-[#009739]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-[#f5f5f0] mb-2">Email</h3>
                <p class="text-[#a0a0a0] mb-3">For lessons and tours:</p>
                <a 
                  href="mailto:hello@nilomaia.com" 
                  class="text-[#009739] hover:text-[#007a2e] font-medium transition-colors"
                >
                  hello@nilomaia.com
                </a>
              </div>
            </div>
          </div>

          <!-- Social Links -->
          <div class="bg-[#2a2a2a] rounded-2xl p-8 border border-[#3a3a3a]">
            <h3 class="text-xl font-bold text-[#f5f5f0] mb-6">Connect</h3>
            <div class="space-y-4">
